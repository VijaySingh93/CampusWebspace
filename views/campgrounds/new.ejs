<% include ../partials/header %>
<div class="container">
    <div class="row">
        
         <div style="width: 30%; margin: 25px auto; padding: 30px; background: white; border-radius: 10px;">
            <h4 style="text-align: center">Create a New DC!</h4>
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="employees" placeholder="estimated employees" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="description" required>description</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
