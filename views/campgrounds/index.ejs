<% include ../partials/header %>

<div class='container'>
<header class='jumbotron'>
    <div class='container'>
        <h1 style="color: rgb(51,102,255); font-weight: 200">Welcome to Infosys Space!</h1>
        <p style="font-family: 'Cookie', cursive;font-weight: 200;font-size: 400%">A public webspace for all DC's across India!</p>
        <p>
            <a class='btn btn-primary btn-large' href='/campgrounds/new'><span class="glyphicon glyphicon-plus"></span> Add a new DC!</a>
            
        </p>
    </div>
</header>

<div class='row text-center' style='display:flex ; flex-wrap: wrap;'>

    <% campgrounds.forEach(function(campground){%>
        <div class ='col-md-3 col-sm-6'>
            
            <div class="thumbnail">
                <img src = "<%= campground.image%>">
            
            <div class='caption'>
                <h3><%= campground.name %></h3>
                
            </div>
            <p>
                <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary btn-xs">More Info</a>
            </p>
            </div>
        </div>
        
    <% }) %>
</div>
</div>

<% include ../partials/footer %>